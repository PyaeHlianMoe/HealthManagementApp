<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollview_button_layout"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/layout_buttons"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/B_hospitals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital"
                android:textSize="11sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/B_gyms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gym"
                android:textSize="11sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/B_parks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Park"
                android:textSize="11sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/B_restaurants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textSize="11sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/B_markets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Market"
                android:textSize="11sp"
                android:layout_weight="1"/>

        </LinearLayout>

    </HorizontalScrollView>




    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.se_lab.se_proj"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/scrollview_button_layout" />



</RelativeLayout>